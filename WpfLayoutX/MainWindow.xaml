<Window x:Class="WpfLayoutX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLayoutX"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="WPF_Layout" Height="450" Width="800">
    <TabControl>
        <TabItem Header="WrapPanel">
            <WrapPanel>
                <Button
                    Background="MidnightBlue"
                    Foreground="White"
                    Width="300"
                    FontSize="22"
                    Height="100"
                    >Ez egy gomb</Button>
                <TextBlock
                    FontSize="22"
                    Margin="50,0,0,0"
                   >Ez egy random szöveg 22-es betűmérettel</TextBlock>
                <TextBlock 
                    FontSize="30"
                    Background="Tomato"
                    Text="Ez egy másik random szöveg 30-as betűmértettel"></TextBlock>
                <Button 
                    x:Name="wrapPanelBtn2"
                    Background="MidnightBlue"
                    Foreground="White"
                    Height="100"
                    FontSize="22"
                    Content="Gomb width nélkül"
                    >

                </Button>
            </WrapPanel>
        </TabItem>



        <TabItem Header="StackPanel">
            <StackPanel>
                <Button
                    Background="MidnightBlue"
                    Foreground="White"
                    Width="300"
                    FontSize="22"
                    Height="100"
                    >Ez egy gomb</Button>
                <TextBlock TextWrapping="Wrap" FontSize="32" 
                           Text=" Ez egy hosszú szöveg ami lehetne rövidebb is de hosszú lett">


                </TextBlock>
                <Button
            Background="MidnightBlue"
            Foreground="White"
            FontSize="22"
            Height="100"
            >Ez egy szélesség nélküli gomb</Button>

            </StackPanel>
        </TabItem>
        <TabItem Header="DockPanel">
            <DockPanel>
                <TextBlock 
                    DockPanel.Dock="Top"
                Background="LightCoral"
                FontSize="24"
                Text="Ez a header rész"
                ></TextBlock>
                <TextBlock 
                     DockPanel.Dock="Bottom"
                 Background="MintCream"
                 FontSize="24"
                 Text="Ez a footer rész"
                 ></TextBlock>
                <ListView Width="175"
                          DockPanel.Dock="Left">
                    <Image Source="https://cdn.pixabay.com/photo/2015/04/23/22/00/tree-736885_1280.jpg" Height="100" Margin="0,10"/>
                </ListView>
                <ListBox DockPanel.Dock="Right">
                    <ListBoxItem Background="Yellow">Alma</ListBoxItem>
                    <ListBoxItem Background="Blue">Körte</ListBoxItem>
                    <ListBoxItem Background="Red">Zsiráf</ListBoxItem>
                    <ListBoxItem Background="Green">Tégla</ListBoxItem>
                </ListBox>
            </DockPanel>
        </TabItem>
        <TabItem Header="Grid elrendezés">
            <Grid ShowGridLines="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="4*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="2*"></RowDefinition>
                </Grid.RowDefinitions>
                <Button 
                    Background="Blue"
                    Content=" Gomb1"
                    Foreground="White"
                    Grid.Column="2"
                    Grid.Row="2"
                    ></Button>
                <TextBox
                    Grid.Row="0"
                    Grid.Column="0"
                    >Ide írhatsz valamit</TextBox>
                <DataGrid
                    BorderBrush="MidnightBlue"
                    BorderThickness="3"
                    Grid.Column="0"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    >
                    
                </DataGrid>
            </Grid>
            
        </TabItem>
        <TabItem Header="Canvas">
            <Canvas>
                <Rectangle Width="300"
                           Height="200"
                           Fill="Gold"
                           Canvas.Left="50"
                           Canvas.Top="50">
                    
                </Rectangle>
                <Rectangle Width="100"
                           Height="50"
                           Canvas.Right="50"
                           Canvas.Bottom="50"
                           Fill="Green"
                           >
                </Rectangle>
                <Ellipse
                    Width="100"
                    Height="100"
                    Fill="Tomato"
                    StrokeThickness="5"
                    Stroke="Black"
                    Canvas.Left="300"
                    Canvas.Bottom="150"
                    >
                </Ellipse>
            </Canvas>
        </TabItem>
        <TabItem Header="Uniform Grid elrendezés">
            <UniformGrid Columns="10"
                         Rows="5">
                <Button>1</Button>
                <Button>2</Button>
                <Button>3</Button>
                <Button>4</Button>
                <Button>5</Button>
                <Button>6</Button>
                <Button>7</Button>
            </UniformGrid>
        </TabItem>
    </TabControl>
</Window>
